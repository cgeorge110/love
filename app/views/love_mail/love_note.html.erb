      body .shadow {width: 260px!important;}
    body .column {width:240px!important; height: 0px !important; padding:0 4px;}  
      body .center {text-align: center!important;}  
span.yshortcuts:hover { color: #000 !important; background-color: none !important; border: none !important; }
