<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
  	<h2><%= @note.content %></h2>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2 text-center">
<%= form_tag fb_auth_path, class: 'form-horizontal' do %>

<%= hidden_field_tag :note_id, @note.id %>
  <div class="entries">
    <div class="form-group">
  		<%= label_tag :to, 'To Name: ', class: 'col-md-2 control-label col-md-offset-3' %>
    	<div class="col-md-4">
    		<%= text_field_tag :to, class: 'form-control' %>      
    	</div>
  	</div>
    
    <div class="form-group">
    	<%= label_tag :from, 'From Name: ', class: 'col-md-2 control-label col-md-offset-3 ' %>
	    	<div class="col-md-4">
	    		<%= text_field_tag :from, class: 'form-control' %>      
	    	</div>
    </div>
      
    <div class="form-actions col-md-4 col-md-offset-4 text-center">
      <%= submit_tag "post my love note", class: 'btn btn-lg btn-danger', id: 'xcreate' %>
    </div>

</div>
<% end %>   
</div>
</div>
    
  

