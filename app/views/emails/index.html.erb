<%- model_class = Email -%>
<div class="page-header">
  <h1>Love notes sent:</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
      <th><%= model_class.human_attribute_name(:getter_email) %></th>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:sender_email) %></th>
      <th><%= model_class.human_attribute_name(:note_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @emails.each do |n| %>
      <tr>
        <td><%= link_to n.id, email_path(n.id) %></td>
        <td><%= n.to %></td>
        <td><%= n.getter_email %></td>
        <td><%= n.from %></td>
        <td><%= n.sender_email %></td>
        <td><%= n.note.content %></td>
        <td><%=l n.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_note_path(n.id), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      note_path(n.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>