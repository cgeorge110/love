<div class="row">
<div class="col-md-6 col-md-offset-3 text-center">
	<h2><%= @note.content %></h2>
</div>
</div>

<%= form_for @tweet, :html => {:class => 'form-horizontal'} do |t| %>
<%= t.hidden_field :note_id, :value => @note.id %>
<div class="entries">


      	<div class="form-group">
      		<%= t.label :to, 'To: @', :class => 'col-md-1 control-label col-md-offset-3' %>
	      	<div class="col-md-4">
	      		<%= t.text_field :to, :class => 'form-control' %>      
	      	</div>
      	</div>




      	<div class="form-group">
      		<%= t.label :from, 'From: @', :class => 'col-md-1 control-label col-md-offset-3 ' %>
	      	<div class="col-md-4">
	      		<%= t.text_field :from, :class => 'form-control' %>      
	      	</div>
      	</div>



    <div class="form-actions col-md-4 col-md-offset-4 text-center">
      <%= t.submit "tweet my love note", :class => 'btn btn-lg btn-danger', :id => 'xcreate' %>
    </div>

</div>
<% end %>   
    
  

